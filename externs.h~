extern int lineCount; // line counter

extern int lcAssembly; // location counter for assembly part

extern struct symbolNode *head; // symbol table head pointer
extern struct symbolNode *temp; // symbol table temp pointer
 
        
extern struct opCodeTable opArray[]; // holds an array of opcodes     
         
extern struct illegalOpcode *illegalHead; // illegal opcode head pointer
extern struct illegalOpcode *illegalTemp; // illegal opcode temp pointer
   
extern int assembly[]; // after assembly process the value will be stored on to array
extern int location; // for the assembly array index        
        
extern struct undefinedSymbol *undefinedHead; // underfined symbol head pointer
extern struct undefinedSymbol *undefinedTemp; // undeffined symbol temp pointer
